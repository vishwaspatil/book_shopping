<h2>
	Your Pragmatic Cart
</h2>


	<table border="0" width="50%" height="50%">

	<%= render partial: "line_items/line_item", locals: { line_items: @cart.line_items } %>

		
		<tr>
				<td></td>
				<td>---------</td>			
		</tr>
		<tr>
			<td>
				Total
			</td>			
			<td>
				<%= number_to_currency(@cart.total_price, :unit => "$" ) %>
			</td>
		</tr>
		</table>

		<%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: 'Are you sure?'} %>

		<%= link_to 'Edit', edit_cart_path(@cart) %> |
		<%= link_to 'Back', root_path %>

			