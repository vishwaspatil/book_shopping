<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>
<h2>
	Your Pragmatic Cart
</h2> 
<ul>
	<% @cart.line_items.each do |item| %> 
	<li>
		<%= item.product.title %>  &times  <%= item.quantity %>
	</li>
	<li>
		<%= number_to_currency(item.product.price, :unit => "$") %>
	</li>
	<% end %> 
</ul>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', root_path %>

